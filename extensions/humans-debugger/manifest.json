{
  "manifest_version": 3,
  "name": "Humans Debugger",
  "description": "Runtime diagnostics extension for local browser-debug agent",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "https://*.dev.example.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://*.dev.example.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
